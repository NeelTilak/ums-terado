<!-- views/editUser.ejs -->

<% include ./partials/header.ejs %>

<div class="flex items-center justify-center h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold mb-6 text-center text-indigo-700">Edit User Details</h2>
    <form action="/edit/<%= user._id %>" method="post">
      <label for="fullName">Full Name:</label>
      <input type="text" id="fullName" name="fullName" value="<%= user.fullName %>" required>

      <!-- Add other input fields for mobileNo, emailId, address, qualification, username -->

      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded mt-4">Update</button>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
